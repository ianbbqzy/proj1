<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<ul>
  <% @trainer.pokemons.each do |pokemon| %>
    <li><%= pokemon.name %>: level <%= pokemon.level %> with health <%= pokemon.health %>
    	<%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %>
    </li>
	<% end %>
</ul>

<% if current_trainer.id == @trainer.id %>
  <%= button_to "Make your own unique pokemon!", new_path(), :class => "button medium", :method => :get %>
<% end %>
